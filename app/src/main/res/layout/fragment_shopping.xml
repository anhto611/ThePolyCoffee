<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.pro112.hydrateam.thepolycoffee.fragment.ShoppingFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/mapShopping"
            android:name="com.project.pro112.hydrateam.thepolycoffee.fragment.ShoppingFragment"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></fragment>

    </FrameLayout>


    <Button
        android:id="@+id/btnSearchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_textview_search_map"
        android:drawableLeft="@mipmap/ic_search"
        android:gravity="center|left"
        android:maxLines="1"
        android:paddingRight="8dp"
        android:text="@string/shopping_tv_search"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        android:textAllCaps="false"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnHelpLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_help" />

            <ImageButton
                android:id="@+id/btnMyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_mylocation" />

        </LinearLayout>

        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/btnChooseAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/background_for_button"
            android:text="@string/shopping_choose_your_address"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>


</FrameLayout>
