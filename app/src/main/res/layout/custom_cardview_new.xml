<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewNews"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageNews"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/coffee_demo"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="European Coffee Expo to Debut in London in 2018"
                android:textColor="@color/color_main"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/contentNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A new trade-only event focused on the coffee industry, European Coffee Expo is scheduled to make its debut in May of 2018 at Londonâ€™s Olympia events center..."
                android:textColor="@color/textview_normal"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/border_top"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Button
                android:id="@+id/moreNews"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="More"
                android:textAllCaps="false"
                android:textColor="@color/color_main"
                android:background="@drawable/button_more_news_custom"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>